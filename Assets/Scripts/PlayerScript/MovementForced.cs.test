using System.Collections;
using UnityEngine;

public class Movement : MonoBehaviour
{
    [Header("Components")]
    [SerializeField] private GameObject leftLeg;
    [SerializeField] private GameObject rightLeg;
    [SerializeField] private Rigidbody2D rb;
    [SerializeField] private Animator anim;
    [SerializeField] private Transform playerPos;

    [Header("Movement Settings")]
    [SerializeField] private float speed = 1.5f;
    [SerializeField] private float stepWait = 0.5f;
    [SerializeField] private float jumpForce = 10f;

    [Header("Collision Settings")]
    [SerializeField] private float positionRadius = 0.2f;
    [SerializeField] private LayerMask ground;

    [Header("Sprite References - Assigne tous tes sprites ici")]
    [SerializeField] private SpriteRenderer headSprite;
    [SerializeField] private SpriteRenderer bodySprite;
    [SerializeField] private SpriteRenderer topLeftArmSprite;
    [SerializeField] private SpriteRenderer bottomLeftArmSprite;
    [SerializeField] private SpriteRenderer topRightArmSprite;
    [SerializeField] private SpriteRenderer bottomRightArmSprite;
    [SerializeField] private SpriteRenderer topLeftLegSprite;
    [SerializeField] private SpriteRenderer bottomLeftLegSprite;
    [SerializeField] private SpriteRenderer topRightLegSprite;
    [SerializeField] private SpriteRenderer bottomRightLegSprite;

    private Rigidbody2D _leftLegRB;
    private Rigidbody2D _rightLegRB;
    private bool _isOnGround;
    private bool _isWalking;

    private void Start()
    {
        if (leftLeg != null) _leftLegRB = leftLeg.GetComponent<Rigidbody2D>();
        if (rightLeg != null) _rightLegRB = rightLeg.GetComponent<Rigidbody2D>();
    }

    private void Update()
    {
        HandleMovementInput();
        HandleJumpInput();
    }

    private void HandleMovementInput()
    {
        float horizontalInput = Input.GetAxisRaw("Horizontal");

        if (horizontalInput != 0)
        {
            FlipCharacter(horizontalInput);

            if (!_isWalking)
            {
                anim.Play("Walk");
                StartCoroutine(WalkCycle(horizontalInput));
            }
        }
        else
        {
            _isWalking = false;
            StopAllCoroutines();
            anim.Play("Idle");
        }
    }

    private void HandleJumpInput()
    {
        _isOnGround = Physics2D.OverlapCircle(playerPos.position, positionRadius, ground);

        bool jumpKeyPressed = Input.GetButtonDown("Jump") || 
                            Input.GetKeyDown(KeyCode.UpArrow) || 
                            Input.GetKeyDown(KeyCode.Z) || 
                            Input.GetKeyDown(KeyCode.W);

        if (_isOnGround && jumpKeyPressed)
        {
            rb.linearVelocity = new Vector2(rb.linearVelocity.x, 0);
            rb.AddForce(Vector2.up * jumpForce);
        }
    }

    private IEnumerator WalkCycle(float direction)
    {
        _isWalking = true;
        Vector2 force = new Vector2(direction, 0) * (speed * 1000);

        while (_isWalking)
        {
            if (_leftLegRB != null)
                _leftLegRB.AddForce(force * Time.deltaTime);
            yield return new WaitForSeconds(stepWait);

            if (_rightLegRB != null)
                _rightLegRB.AddForce(force * Time.deltaTime);
            yield return new WaitForSeconds(stepWait);
        }
    }

    private void FlipCharacter(float direction)
    {
        bool flipX = direction < 0; // true = gauche, false = droite

        // Flip SEULEMENT les sprites, ne touche PAS aux positions
        if (headSprite != null) headSprite.flipX = flipX;
        if (bodySprite != null) bodySprite.flipX = flipX;
        if (topLeftArmSprite != null) topLeftArmSprite.flipX = flipX;
        if (bottomLeftArmSprite != null) bottomLeftArmSprite.flipX = flipX;
        if (topRightArmSprite != null) topRightArmSprite.flipX = flipX;
        if (bottomRightArmSprite != null) bottomRightArmSprite.flipX = flipX;
        if (topLeftLegSprite != null) topLeftLegSprite.flipX = flipX;
        if (bottomLeftLegSprite != null) bottomLeftLegSprite.flipX = flipX;
        if (topRightLegSprite != null) topRightLegSprite.flipX = flipX;
        if (bottomRightLegSprite != null) bottomRightLegSprite.flipX = flipX;
    }
}